<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/very_x_large_padding">

    <TextView
        style="@style/BlackEmphasisTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/xxx_large_padding"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/feature_map_free_flavor" />

    <Button
        android:id="@+id/bt_go_premium"
        style="@style/RoundedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/go_premium" />

</LinearLayout>
