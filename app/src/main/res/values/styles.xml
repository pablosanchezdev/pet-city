<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="XXXLargeTextView" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/xxx_large_text_size</item>
    </style>

    <style name="RoundedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:padding">@dimen/bt_rounded_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="RoundedEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:drawablePadding">@dimen/ed_drawable_padding</item>
        <item name="android:padding">@dimen/ed_rounded_padding</item>
        <item name="android:textColorHint">@color/white_smoke</item>
    </style>

    <style name="DrawableEditText" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">@dimen/ed_drawable_padding</item>
        <item name="android:paddingBottom">@dimen/large_padding</item>
    </style>

    <style name="ErrorNormalTextView" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/strong_red</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="Tabs" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabsText</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/accent</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="TabsText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WhiteEmphasisTextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
    </style>

    <style name="WhiteEmphasisTextView.BlackEmphasisTextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WhiteMediumTextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sub_heading_text_size</item>
    </style>

    <style name="WhiteMediumTextView.BlackMediumTextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WhiteThinTextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="WhiteThinTextView.BlackThinTextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FloatingHint">
        <item name="colorAccent">?attr/colorPrimary</item>
    </style>

</resources>
