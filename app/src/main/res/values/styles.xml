<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="BigTextView" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/login_title_text_size</item>
    </style>

    <style name="RoundedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:padding">@dimen/bt_rounded_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/bt_rounded_text_size</item>
    </style>

    <style name="RoundedEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:drawablePadding">@dimen/ed_rounded_drawable_padding</item>
        <item name="android:padding">@dimen/ed_rounded_padding</item>
        <item name="android:textColorHint">@color/white_smoke</item>
    </style>

    <style name="ErrorTextView" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/strong_red</item>
        <item name="android:textSize">@dimen/error_small_text_size</item>
    </style>

    <style name="Tabs" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/accent</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
